{
  "name": "swaply",
  "version": "1.0.0",
  "private": true,
  "description": "Skill Swap Platform - Exchange skills and learn together",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "backend:dev": "npm run dev -w @swaply/backend",
    "web:dev": "npm run dev -w @swaply/web",
    "mobile:dev": "npm run dev -w @swaply/mobile",
    "db:migrate": "npm run migrate -w @swaply/backend",
    "db:seed": "npm run seed -w @swaply/backend"
  },
  "keywords": [
    "skill-swap",
    "learning",
    "teaching",
    "education",
    "marketplace"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
